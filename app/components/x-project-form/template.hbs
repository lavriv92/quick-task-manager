{{yield}}

<form class="form">
  <div class="form-group">
    {{input type="text" placeholder="Project name" value=name class="form-control"}}
  </div>
  <div class="form-group">
    {{textarea type="text" placeholder="Project description" value=description class="form-control"}}
  </div>
  <div class="form-group">
    <button type="button" class="btn btn-success btn-block" {{action 'save'}}>Save</button>
  </div>
</form>
