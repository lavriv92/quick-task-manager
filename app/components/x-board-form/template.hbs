{{yield}}

<form class="form">
  <div class="form-group">
    {{input class="form-control" value=name placeholder="Board name"}}
  </div>
  <div class="form-group">
    {{textarea class="form-control" value=description placeholder="Board description"}}
  </div>
  <div class="form-group">
    {{#power-select
      options=projects
      selected=selectedProject
      onchange=(action (mut selectedProject))
      as |project|}}
      {{project.name}}
    {{/power-select}}
  </div>
  <div class="form-group">
    <button class="btn btn-success btn-block" {{action 'save'}}>Save</button>
  </div>
</form>
