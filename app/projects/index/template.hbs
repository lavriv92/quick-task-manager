{{outlet}}

<div class="row">
  <div class="col-md-10">
    <div>
      <h2 class="page-header">Projects</h2>
      {{#link-to 'projects.new' class="btn btn-success pull-right"}}Create new project{{/link-to}}
    </div>
    <table class="table table-striped table-hovered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |project|}}
        <tr>
          <td>{{#link-to 'projects.show' project.id}}{{project.name}}{{/link-to}}</td>
          <td>
            <button {{action 'delete' project.id}} class="btn btn-default">Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="col-md-2">
    <!-- <h3 class="page-header">Filters</h3>
    <div>
      foo
    </div> -->
  </div>
</div>
