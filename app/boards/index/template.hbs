{{outlet}}

<div class="row">
  <div class="col-md-10">
    <div>
      <h2 class="page-header">Boards</h2>
      {{#link-to 'boards.new' class="btn btn-success pull-right"}}Create new board{{/link-to}}
    </div>
    <table class="table table-striped">
      <thead>
        <tr><th>Name</th></tr>
      </thead>
      <tbody>
        {{#each model as |board|}}
        <tr>
          <td>{{#link-to 'boards.show' board.id}}{{board.name}}{{/link-to}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
